    <title>Countdown Timer</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@600&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg-color: #191919;
            --block-color: #191919;
            --number-color: #E0E0E0;
            --label-color: #9A9A9A;
            --colon-color: #E0E0E0;
            --font-main: 'Inter', sans-serif;
            --final-message-color: #4CAF50;
        }
        body {
            margin: 0; padding: 10px;
            min-height: 100vh;
            background-color: var(--bg-color);
            box-sizing: border-box;
            font-family: var(--font-main);
            display: flex; justify-content: center; align-items: flex-start;
        }
        .timer-container {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        #timer-title {
            font-family: var(--font-main);
            font-weight: 600;
            font-size: 2.5em;
            color: var(--number-color);
            margin-bottom: 1px;
            letter-spacing: 1px;
            text-align: left;
        }
        #timer-wrapper {
            display: flex;
            align-items: center;
            gap: 0;
            text-align: center;
        }
        .time-block {
            background-color: var(--block-color);
            padding: 1px;
            border-radius: 5px;
            min-width: 60px;
            transition: transform 0.2s ease;
            margin: 0 0;
        }
        .time-block:hover { transform: translateY(-5px); }
        .numbers {
            font-family: var(--font-main);
            font-weight: 600;
            font-size: 2.5em;
            color: var(--number-color);
            line-height: 1;
        }
        .label {
            font-family: var(--font-main);
            font-weight: 600;
            text-transform: uppercase;
            font-size: 0.6em;
            letter-spacing: 2px;
            color: var(--label-color);
            margin-top: 5px;
        }
        .colon {
            display: flex;
            align-items: center;
            font-size: 3.5em;
            color: var(--colon-color);
            font-weight: 600;
            margin: 0 10px;
            height: 100%;
            line-height: 1;
            user-select: none;
        }
        #final-message {
            font-family: var(--font-main);
            font-size: 2.5em;
            color: var(--final-message-color);
            font-weight: 600;
        }
