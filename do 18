<body>
<div class="timer-container">
    <div id="timer-title">–û–±–Ω–æ–≤–∏—Ç—å –∞–∫—Ü–∏–∏</div>
    <div id="timer-wrapper">
        <div class="time-block">
            <div id="days" class="numbers">0</div>
            <div class="label">–î–ù–ò</div>
        </div>
        <span class="colon">:</span>
        <div class="time-block">
            <div id="hours" class="numbers">0</div>
            <div class="label">–ß–ê–°–´</div>
        </div>
        <span class="colon">:</span>
        <div class="time-block">
            <div id="minutes" class="numbers">0</div>
            <div class="label">–ú–ò–ù–£–¢–´</div>
        </div>
    </div>
    <div id="final-message" style="display:none;">–í—Ä–µ–º—è –≤—ã—à–ª–æ! üéâ</div>
</div>
<script>
    // –ü–æ–ª—É—á–∞–µ–º –ø–∞—Ä–∞–º–µ—Ç—Ä—ã –∏–∑ –∞–¥—Ä–µ—Å–Ω–æ–π —Å—Ç—Ä–æ–∫–∏ (–¥–ª—è –∫–∞—Å—Ç–æ–º–∏–∑–∞—Ü–∏–∏)
    const params = new URLSearchParams(window.location.search);

    // –ê–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–∏ —Ä–∞—Å—Å—á–∏—Ç—ã–≤–∞–µ–º –¥–∞—Ç—É –æ–∫–æ–Ω—á–∞–Ω–∏—è:
    // —Å—Ç–∞—Ä—Ç ‚Äî 1-–µ —á–∏—Å–ª–æ —Ç–µ–∫—É—â–µ–≥–æ –º–µ—Å—è—Ü–∞, –æ–∫–æ–Ω—á–∞–Ω–∏–µ ‚Äî 19-–µ —á–∏—Å–ª–æ 00:00
    const nowDate = new Date();
    let targetDate = new Date(nowDate.getFullYear(), nowDate.getMonth(), 19, 0, 0, 0);

    // –ï—Å–ª–∏ —Å–µ–≥–æ–¥–Ω—è —É–∂–µ –ø–æ—Å–ª–µ 19-–≥–æ, —Å—á–∏—Ç–∞–µ–º —Å–ª–µ–¥—É—é—â–∏–π –º–µ—Å—è—Ü
    if (nowDate >= targetDate) {
        targetDate = new Date(nowDate.getFullYear(), nowDate.getMonth() + 1, 19, 0, 0, 0);
    }

    // –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è –ø–æ –æ–∫–æ–Ω—á–∞–Ω–∏–∏ —Ç–∞–π–º–µ—Ä–∞ –∏–∑ –ø–∞—Ä–∞–º–µ—Ç—Ä–∞ –∏–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–µ–º —Å—Ç–∞–Ω–¥–∞—Ä—Ç–Ω–æ–µ —Å–æ–æ–±—â–µ–Ω–∏–µ
    const finalMessageText = params.get('message') || '–í—Ä–µ–º—è –≤—ã—à–ª–æ! üéâ';

    // –ü–æ–ª—É—á–∞–µ–º –ø–∞—Ä–∞–º–µ—Ç—Ä—ã —Ü–≤–µ—Ç–∞ –∏ –∑–∞–≥–æ–ª–æ–≤–∫–∞ –∏–∑ –∞–¥—Ä–µ—Å–Ω–æ–π —Å—Ç—Ä–æ–∫–∏
    const bgColor = params.get('bgcolor'),
          blockColor = params.get('blockcolor'),
          numberColor = params.get('numbercolor'),
          labelColor = params.get('labelcolor'),
          title = params.get('title');

    // –ü–æ–ª—É—á–∞–µ–º –∫–æ—Ä–Ω–µ–≤–æ–π —ç–ª–µ–º–µ–Ω—Ç –¥–æ–∫—É–º–µ–Ω—Ç–∞ –¥–ª—è –∏–∑–º–µ–Ω–µ–Ω–∏—è CSS-–ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö
    const root = document.documentElement;
    if (bgColor) root.style.setProperty('--bg-color', `#${bgColor}`);
    if (blockColor) root.style.setProperty('--block-color', `#${blockColor}`);
    if (numberColor) root.style.setProperty('--number-color', `#${numberColor}`);
    if (labelColor) root.style.setProperty('--label-color', `#${labelColor}`);
    if (title) document.getElementById('timer-title').textContent = title;

    // –ü–æ–ª—É—á–∞–µ–º —ç–ª–µ–º–µ–Ω—Ç—ã –¥–ª—è –≤—ã–≤–æ–¥–∞ –¥–Ω–µ–π, —á–∞—Å–æ–≤, –º–∏–Ω—É—Ç, –æ–±—ë—Ä—Ç–∫—É —Ç–∞–π–º–µ—Ä–∞ –∏ —Å–æ–æ–±—â–µ–Ω–∏–µ
    const daysEl = document.getElementById("days"),
          hoursEl = document.getElementById("hours"),
          minutesEl = document.getElementById("minutes"),
          timerWrapper = document.getElementById("timer-wrapper"),
          finalMessage = document.getElementById("final-message");

    // –£—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º —Ç–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è –ø–æ –æ–∫–æ–Ω—á–∞–Ω–∏–∏ —Ç–∞–π–º–µ—Ä–∞
    finalMessage.textContent = finalMessageText;

    // –ó–∞–ø—É—Å–∫–∞–µ–º —Ç–∞–π–º–µ—Ä, –∫–æ—Ç–æ—Ä—ã–π –æ–±–Ω–æ–≤–ª—è–µ—Ç –∑–Ω–∞—á–µ–Ω–∏—è –∫–∞–∂–¥—É—é —Å–µ–∫—É–Ω–¥—É
    const timer = setInterval(function() {
        const now = new Date().getTime(),
              diff = targetDate - now;

        if (diff <= 0) {
            clearInterval(timer);
            timerWrapper.style.display = 'none';
            finalMessage.style.display = 'block';
            return;
        }

        let days = Math.floor(diff / (1000 * 60 * 60 * 24)),
            hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)),
            minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));

        daysEl.innerHTML = days;
        hoursEl.innerHTML = hours < 10 ? '0' + hours : hours;
        minutesEl.innerHTML = minutes < 10 ? '0' + minutes : minutes;
    }, 1000);
</script>
</body>
